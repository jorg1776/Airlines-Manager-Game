<Window x:Class="AirlinesManagerGame.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirlinesManagerGame.Views"
        xmlns:viewmodels="clr-namespace:AirlinesManagerGame.Views.ViewModels"
        mc:Ignorable="d"
        Title="Airlines Manager" Height="500" Width="800">

    <Window.DataContext>
        <viewmodels:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:AirplanesStatusViewModel}">
            <local:AirplanesStatusView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:StoreViewModel}">
            <local:StoreView />
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="0,0,0,33">
        <ContentControl Content="{Binding CurrentViewModel}" />
        <StatusBar HorizontalAlignment="Left" Height="34" Margin="0,436,0,-34" VerticalAlignment="Top" Width="792">
            <StatusBarItem>
                <Label Content="{Binding UsersMoney}"/>
            </StatusBarItem>
            <StatusBarItem>
                <Label Content="{Binding UsersLevel}"/>
            </StatusBarItem>
        </StatusBar> 
    </Grid>
</Window>
