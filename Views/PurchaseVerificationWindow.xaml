<Window x:Class="AirlinesManagerGame.Views.PurchaseVerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirlinesManagerGame.Views"
        xmlns:viewmodels="clr-namespace:AirlinesManagerGame.Views.ViewModels"
        mc:Ignorable="d"
        Title="PurchaseVerificationWindow" Height="300" Width="400">

    <Grid>
        <Label Content="{Binding VerificationQuestion, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Content="Yes" Command="{Binding AcceptPurchaseCommand}" HorizontalAlignment="Left" Margin="97,211,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="No" Command="{Binding DeclinePurchaseCommand}" HorizontalAlignment="Left" Margin="195,211,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
